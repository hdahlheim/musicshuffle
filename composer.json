{
    "name": "gibmit_iap17a/musicshuffle",
    "description": "App to shuffle music and create playlists",
    "homepage": "https://github.com/hdahlheim/musicshuffle",
    "license": "We don't care",
    "authors": [
        {
            "name": "Malte Henning Frans Dahlheim",
            "email": "malte.dahlheim@gibmit.ch",
            "homepage": "https://dahlheim.ch/"
        },
        {
            "name": "Tatyana Vogel",
            "email": "tatyana.vogel@gibmit.ch",
            "homepage": "ihrkoenntmichmal.ch"
        }
    ],
    "require": {
        "ext-json": "*",
        "monolog/monolog": "^1.24",
        "php": ">=7.1",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
