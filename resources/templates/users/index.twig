{% extends "layouts/_base.twig" %}
{% block main %}
    <main class="container mx-auto mt-16">
    <ul>
    {% for user in users %}
        <li class="flex items-center p-4 mx-4 my-2 bg-gray-700 rounded-sm">
            <img class="w-10 h-10 mr-4 bg-black rounded-full" src="" alt="">
            <a href="/users/{{user.id}}">
            <span class="text-xl">{{user.username}}</span>
            <span class="text-xl">{{user.email}}</span>
            </a>
        </li>
    {% endfor %}
    </ul>
    </main>
{% endblock %}
