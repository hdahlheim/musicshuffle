{% extends "layouts/_base.twig" %}
{% block main %}
    <main class="container px-6 py-4 mx-auto mt-16 bg-gray-700 rounded-sm">
    <h2 class="mb-4 text-2xl font-bold">User List</h2>
    <ul class="border-b-2 border-l-2 border-r-2 border-gray-800 rounded-sm">
    {% for user in users %}
        <li class="flex items-center px-6 py-3 bg-gray-600 border-t-2 border-gray-800">
            <img class="flex-shrink-0 w-10 h-10 mr-4 bg-black border-2 border-gray-800 rounded-full shadow-inner" src="{{user.email|gravatar}}" alt="">
            <div class="w-1/4 text-lg font-semibold">{{user.username}}</div>
            <div class="w-1/4">{{user.email}}</div>
            <a class="ml-auto text-teal-400 hover:text-teal-500" href="/users/{{user.id}}">view</a>
        </li>
    {% endfor %}
    </ul>
    </main>
{% endblock %}
