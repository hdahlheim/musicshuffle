{% extends "layouts/_base.twig" %}
{% block main %}
<div class="container flex items-center justify-center h-screen mx-auto -mt-20">
    <div class="w-full max-w-sm p-4 bg-gray-800 rounded-sm">
        <h2 class="mb-4 text-lg font-bold">
            Register
        </h2>
        <form action="/users" method="POST">
            {{ csrfField() }}
            <lable class="block mb-4">
                <span class="block text-sm font-semibold">Username</span>
                <input class="w-full bg-gray-700 border-gray-800 form-input"
                    name="username"
                    placeholder="Username"
                    type="text"
                    required>
            </lable>
            <lable class="block mb-4">
                <span class="block text-sm font-semibold">Email</span>
                <input class="w-full bg-gray-700 border-gray-800 form-input"
                    name="email"
                    placeholder="gugus@example.com"
                    type="email"
                    required>
            </lable>
            <lable class="block mb-4">
                <span class="block text-sm font-semibold">
                    Password
                </span>
                <input class="w-full bg-gray-700 border-gray-800 form-input"
                    name="password"
                    placeholder="Password"
                    type="password"
                    required>
            </lable>
            <lable class="block mb-4">
                <span class="block text-sm font-semibold">
                    Password Confirmation
                </span>
                <input class="w-full bg-gray-700 border-gray-800 form-input"
                    name="password_check"
                    placeholder="Password"
                    type="password"
                    required>
            </lable>
            <button
                class="w-full px-4 py-2 mt-4 font-semibold text-teal-100 bg-teal-500 rounded-sm hover:bg-teal-700"
                type="submit">
                Register
            </button>
            <div class="mt-4 text-sm text-center">
                <p>Do you want to <a class="text-teal-500 hover:text-teal-700" href="/login">login</a> insted?</p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
