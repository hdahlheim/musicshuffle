{% extends "layouts/_base.twig" %}
{% block main %}
    <main class="max-w-md p-4 mx-auto mt-16 bg-gray-800 shadow">
        <div>
            <div class="text-center">
                <img class="inline rounded-full" src="{{user.email|gravatar}}" alt="">
            </div>
            <div class="mb-4 text-lg">
                <div class="text-sm font-semibold text-gray-500"># ID</div>
                <div>{{user.id}}</div>
            </div>
            <div class="mb-4">
                <div class="text-sm font-semibold text-gray-500">username</div>
                <div class="text-lg">{{user.username}}</div>
            </div>
            <div class="mb-4">
                <div class="text-sm font-semibold text-gray-500">email</div>
                <div class="text-lg">{{user.email}}</div>
            </div>
            <form>
                <lable class="block mb-4">
                    <span class="block text-sm font-semibold">
                        Password
                    </span>
                    <input class="w-full bg-gray-700 border-gray-800 form-input"
                        name="password"
                        placeholder="Password"
                        type="password">
                </lable>
                <lable class="block mb-4">
                    <span class="block text-sm font-semibold">
                        Password Confirm
                    </span>
                    <input class="w-full bg-gray-700 border-gray-800 form-input"
                        name="password"
                        placeholder="Password"
                        type="password">
                </lable>
                <button
                class="w-full px-4 py-1 mb-2 text-white bg-teal-700 rounded-sm"
                >Update</button>
                <a
                class="block w-full px-4 py-1 mb-2 text-center text-white bg-red-600 rounded-sm"
                >Cancel</a>
            </form>
        </div>
    </main>
{% endblock %}
