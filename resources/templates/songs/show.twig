{% extends "layouts/_base.twig" %}
{% block main %}
<main class="max-w-md p-4 mx-auto">
    <div class="p-4 mr-6 text-center bg-gray-800 rounded">
        <div class="flex flex-col justify-between p-4 bg-gray-700 rounded shadow-lg hover:bg-teal-400">
            <h1 class="my-4 text-3xl font-bold">{{song.name}}</h1>
            <img class="block w-3/4 mx-auto mb-4" src="{{ytImg(song.youtube_id)}}" alt="{{song.name}}">
            <a class="flex items-center justify-center block w-full text-xl group btn-teal" href="{{song.url}}/play">
                <span class="mr-2">Play on youtube</span>
                <svg viewBox="0 0 24 24" class="inline-block w-8 h-8">
                    <circle cx="12" cy="12" r="10" class="text-teal-100 fill-current"></circle>
                    <path class="text-teal-500 fill-current group-hover:text-teal-700" d="M15.51 11.14a1 1 0 0 1 0 1.72l-5 3A1 1 0 0 1 9 15V9a1 1 0 0 1 1.51-.86l5 3z"></path>
                </svg>
            </a>
        </div>
    </div>
</main>
{% endblock %}
